{
  "name": "pixijs-adventure",
  "version": "1.5.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssbarbee/pixijs-adventure.git"
  },
  "author": "ssbarbee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ssbarbee/pixijs-adventure/issues"
  },
  "homepage": "https://ssbarbee.github.io/pixijs-adventure",
  "scripts": {
    "deploy:gh-pages": "yarn build && gh-pages -d dist",
    "start": "webpack serve --mode=development",
    "build": "run-s clean build-only",
    "build-only": "webpack --mode=production",
    "clean": "rimraf dist",
    "release": "semantic-release",
    "ts:check": "yarn ts:check-types && yarn ts:circular-check",
    "ts:check-types": "tsc --noEmit",
    "ts:circular-check": "dpdm --no-output --no-tree --no-warning --exit-code circular:1 -T ./src/index.ts",
    "lint:check": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "prettier:check": "prettier --log-level silent --check './src/**/*.{ts,tsx}'",
    "prettier:fix": "prettier --log-level silent --write './src/**/*.{ts,tsx}'",
    "prepare": "is-ci || husky install",
    "test": "jest --silent",
    "test:coverage": "yarn test --coverage",
    "generate:coverage-badges": "npx istanbul-badges-readme --silent",
    "code-quality:check": "npx concurrently 'yarn ts:check' 'yarn prettier:check' 'yarn lint:check --quiet'"
  },
  "dependencies": {
    "@pixi/text": "7.3.2",
    "@pixi/ui": "0.10.1",
    "pixi.js": "7.3.2",
    "rot-js": "2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "9.0.1",
    "@swc/core": "1.3.29",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "concurrently": "7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "dpdm": "3.11.0",
    "eslint": "8.26.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "gh-pages": "5.0.0",
    "html-webpack-plugin": "5.5.3",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "istanbul-badges-readme": "1.8.5",
    "jest": "29.4.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.0",
    "rimraf": "5.0.5",
    "semantic-release": "19.0.5",
    "semantic-release-cli": "5.4.4",
    "simplex-noise": "4.0.1",
    "terser-webpack-plugin": "5.3.9",
    "ts-loader": "9.5.1",
    "typescript": "5.2.2",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1"
  },
  "resolutions": {
    "underscore.string@~2.2.0rc": "2.2.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "ci",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "perf",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "revert",
              "release": "patch"
            },
            {
              "type": "style",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "breaking",
              "release": "major"
            }
          ],
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES"
            ]
          }
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "README.md"
          ],
          "message": "chore: Release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "engines": {
    "node": ">= 16.17.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@4.0.2"
}
